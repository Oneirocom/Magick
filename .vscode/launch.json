{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
          "name": "Client",
          "type": "chrome",
          "request": "launch",
          "resolveSourceMapLocations": [
            "${workspaceFolder}/**",
            "!**/node_modules/**"
        ],
          "url": "http://localhost:4200"
        },
        {
          "name": "SpellCaster",
          "type": "node",
          "request": "attach",
          "port": 7777
        },
        {
          "name": "Server",
          "type": "node",
          "request": "attach",
          "port": 7778
        },
        {
          "name": "AgentServer",
          "type": "node",
          "request": "attach",
          "port": 7779
        }
    ]
}
