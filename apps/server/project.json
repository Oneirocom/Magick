{
  "name": "@magickml/server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "implicitDependencies": [
    "server-core",
    "shared-core",
    "@magickml/plugin-*"
  ],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "port": 7778,
        "inspect": true,
        "outputPath": "dist/apps/server",
        "main": "apps/server/src/index.ts",
        "assets": [
          "apps/server/src/certs"
        ],
        "tsConfig": "apps/server/tsconfig.app.json",
        "webpackConfig": "apps/server/webpack.config.js"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/server/environments/environment.ts",
              "with": "apps/server/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@magickml/server:build",
        "inspect": true,
        "port": 7778
      },
      "configurations": {
        "production": {
          "buildTarget": "@magickml/server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/server/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/server/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
