{
  "name": "agent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/agent/src",
  "// targets": "to see all targets run: nx show project agent --web",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/agent && pwd && nitro dev --port 4050"
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/agent && pwd && nitro prepare"
      }
    },

    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare"],
      "options": {
        "command": "cd apps/agent && pwd && nitro build"
      }
    },

    "generate": {
      "command": "npx prisma generate --schema ./prisma/schema.prisma",
      "options": {
        "cwd": "apps/agent"
      }
    },

    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "cd apps/agent && node ./.output/server/index.mjs"
      }
    }
  }
}
