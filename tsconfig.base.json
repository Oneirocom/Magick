{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "typeRoots": ["./packages/@types", "./node_modules/@types"],
    "paths": {
      "@magickml/client": ["apps/client/src/index.ts"],
      "@magickml/cost-calculator": ["packages/cost-calculator/src/index.ts"],
      "@magickml/editor": ["packages/editor/src/index.ts"],
      "@magickml/client-core": ["packages/client-core/src/index.ts"],
      "@magickml/engine": ["packages/engine/src/index.ts"],
      "@magickml/plugin-discord-client": ["packages/plugin-discord/client/src/index.ts"],
      "@magickml/plugin-discord-server": ["packages/plugin-discord/server/src/index.ts"],
      "@magickml/plugin-rest": ["packages/plugin-rest/src/index.ts"],
      "@magickml/plugin-loop": ["packages/plugin-loop/src/index.ts"],
      "@magickml/plugin-finetune": ["packages/plugin-finetune/src/index.ts"],
      "@magickml/plugin-ethereum": ["packages/plugin-ethereum/src/index.ts"],
      "@magickml/server": ["apps/server/src/index.ts"],
      "@magickml/agent": ["apps/agent/src/index.ts"],
      "@magickml/server-core": ["packages/server-core/src/index.ts"],
      "@magickml/types": ["packages/@types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
