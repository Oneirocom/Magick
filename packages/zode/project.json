{
  "name": "zode",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/zode/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/zode",
        "main": "packages/zode/src/index.ts",
        "tsConfig": "packages/zode/tsconfig.lib.json",
        "assets": ["packages/zode/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/zode/jest.config.ts"
      }
    }
  }
}
