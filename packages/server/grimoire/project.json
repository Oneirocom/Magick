{
  "name": "server/grimoire",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/server/grimoire/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/server/grimoire",
        "main": "packages/server/grimoire/src/index.ts",
        "tsConfig": "packages/server/grimoire/tsconfig.lib.json",
        "assets": ["packages/server/grimoire/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/server/grimoire/**/*.ts",
          "packages/server/grimoire/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/server/grimoire/jest.config.ts"
      }
    }
  },
  "tags": []
}
