{
  "name": "server/grimoire",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "tags": ["release"],
  "sourceRoot": "packages/server/grimoire/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/server/grimoire",
        "tsConfig": "packages/server/grimoire/tsconfig.lib.json",
        "main": "packages/server/grimoire/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/server/grimoire/jest.config.ts"
      }
    }
  }
}
